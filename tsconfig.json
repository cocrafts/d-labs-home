{
  "extends": "@walless/tsconfig/next.json",	
  "include": [
    "next-env.d.ts",
		"global.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "components/*": [
        "./src/components/*"
      ],
      "pages/*": [
        "./src/pages/*"
      ],
      "utils/*": [
        "./src/utils/*"
      ],
      "state/*": [
        "./src/state/*"
      ]
    }
  }
} 
